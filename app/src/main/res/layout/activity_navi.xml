<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/compass_image"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/downarrow"
        />

    <TextView
        android:id="@+id/heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/compass_image"
        android:text="위치"
        android:textSize="0dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading_text"
        android:text="현재 위치"
        android:textColor="@color/black"
        android:id="@+id/starts"
        android:textSize="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/starts"
        android:text="도착지"
        android:id="@+id/ends"
        android:textSize="50dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ends"
        android:text="현재 방향"
        android:id="@+id/direction"
        android:textSize="0dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/direction"
        android:text="남은 거리"
        android:id="@+id/distance"
        android:textColor="@color/black"
        android:textSize="30dp"
        />

</RelativeLayout>